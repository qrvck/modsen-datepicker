{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": { 
      "@/*": ["*"]
    }
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist", "./src/stories"]
}
